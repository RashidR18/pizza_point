<section class="hero py-16">
  <div class="container mx-auto flex flex-col-reverse md:flex-row items-center justify-between">
    <div class="w-full md:w-1/2 text-center md:text-left">
      <h6 class="text-lg"><em>Are you hungry</em></h6>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold">Don't wait!</h1>
      <button 
      onclick="document.getElementById('menu').scrollIntoView({ behavior: 'smooth' })"
      class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
    </div>
    <div class="w-full md:w-1/2 mb-8 md:mb-0">
      <img src="./img/hero-pizza.png" class="mx-auto md:mx-0" alt="">
    </div>
  </div>
</section>

<section id="menu" class="menu container mx-auto py-8 px-4">
  <h1 class="text-xl font-bold mb-8 text-center md:text-left">All Pizzas</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-8">
    <% pizzas.forEach(function(pizza){ %>
      <div class="w-full bg-white rounded-lg shadow p-4">
        <img class="h-40 w-full object-cover mb-4" src="/img/<%= pizza.image %>" alt="">
        <div class="text-center md:text-left">
          <h2 class="mb-2 text-lg font-semibold"><%= pizza.name %></h2>
          <div class="flex items-center justify-between mt-4">
            <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
           <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-4 rounded-full flex items-center justify-center font-bold bg-primary text-white hover:bg-primary-dark transition">
    <span class="text-lg mr-2">+</span>
    <span class="text-sm">Add</span>
</button>

          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
