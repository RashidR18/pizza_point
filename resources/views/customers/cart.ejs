<section class="cart py-10 lg:py-16">
  <% if(session.cart) { %>

  <div class="order container mx-auto w-full lg:w-1/2 px-4">

    <!-- Header -->
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img class="w-6 h-6" src="/img/cart-black.png" alt="">
      <h1 class="font-bold ml-4 text-xl lg:text-2xl">Order Summary</h1>
    </div>

    <!-- Pizza list -->
    <div class="pizza-list">
      <% for(let pizza of Object.values(session.cart.items)) { %>

      <div class="flex flex-col sm:flex-row sm:items-center my-6 gap-4 border-b pb-4">

        <!-- Image -->
        <img class="w-20 sm:w-24 mx-auto sm:mx-0" src="/img/<%= pizza.items.image %>" alt="">

        <!-- Details -->
        <div class="flex-1 text-center sm:text-left">
          <h1 class="font-semibold"><%= pizza.items.name %></h1>
          <span class="text-sm text-gray-500"><%= pizza.items.size %></span>
        </div>

        <!-- Quantity -->
        <div class="text-center sm:text-left">
          <span class="font-semibold">Qty: <%= pizza.qty %></span>
        </div>

        <!-- Price -->
        <div class="text-center sm:text-left font-bold text-lg">
          â‚¹<%= pizza.items.price * pizza.qty %>
        </div>

        <!-- Remove -->
        <button
          class="remove-item text-red-600 font-bold hover:underline text-center sm:text-left"
          data-id="<%= pizza.items._id %>"
          data-size="<%= pizza.items.size %>">
          Remove
        </button>

      </div>

      <% } %>
    </div>

    <!-- Total -->
    <div class="text-right py-6">
      <div>
        <span class="text-lg font-bold">Total Amount</span>
        <span class="amount text-2xl font-bold ml-2">
          â‚¹<%= session.cart.totalPrice %>
        </span>
      </div>

      <% if(user) { %>
      <!-- Order Form -->
      <form action="/orders" method="POST" class="mt-8 flex flex-col gap-4">
        <input
          name="phone"
          class="border border-gray-400 p-3 w-full rounded"
          type="text"
          placeholder="Phone number">

        <input
          name="address"
          class="border border-gray-400 p-3 w-full rounded"
          type="text"
          placeholder="Address">

        <button
          class="btn-primary px-6 py-3 rounded-full text-white font-bold mt-4 w-full"
          type="submit">
          Order Now
        </button>
      </form>
      <% } else { %>

      <a href="/login"
        class="inline-block btn-primary px-6 py-3 rounded-full text-white font-bold mt-6 w-full text-center">
        Login to Continue
      </a>

      <% } %>
    </div>
  </div>

  <% } else { %>

  <!-- Empty Cart -->
  <div class="container mx-auto text-center px-4">
    <h1 class="text-2xl lg:text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
    <p class="text-gray-500 text-base lg:text-lg mb-8">
      You probably haven't ordered a pizza yet.<br>
      To order a pizza, go to the main page.
    </p>

    <img class="w-3/4 sm:w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">

    <a href="/"
      class="inline-block px-6 py-3 rounded-full btn-primary text-white font-bold mt-8">
      Go back
    </a>
  </div>

  <% } %>
</section>
